{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist", // Compiled files go here
    "rootDir": "./", // Source files are here
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}